<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nisargdoshi.myclassroom.Login">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo_iv"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email_et"
        android:hint="Email"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:text="Login"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/login_btn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password_et"
        android:layout_alignStart="@+id/password_et"

        android:visibility="visible"
        android:clickable="true"
        android:enabled="false"
        android:onClick="login"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/password_et"
        android:singleLine="true"
        android:hint="Password"
        android:layout_below="@+id/email_et"
        android:layout_alignStart="@+id/email_et" />

    <Button
        android:text="create new my classroom account"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/crt_new_acc_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login_btn"

        />

    <TextView
        android:text="Forgot Password?"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_password_tv"
        android:layout_marginEnd="57dp"
        android:layout_below="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn" />

</RelativeLayout>
